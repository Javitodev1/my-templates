---
import { LinkCard, BrandText, Accent } from '../components'
---

<section class='max-w-screen-xl px-10 mx-auto'>
  <div class='text-center py-14'>
    <BrandText
      variant={'spaced'}
      color={'sky'}
      ><slot name='before-header' /></BrandText
    >

    <BrandText
      variant={'title'}
      color={'black'}
      ><slot name='header' /></BrandText
    >

    <BrandText
      variant={'body'}
      color={'black'}
      class='mt-8'
      ><slot name='after-header' /></BrandText
    >
  </div>

  <div
    class='grid grid-cols-1 pt-10 pb-32 md:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-16'>
    <slot name='cards' />
  </div>
</section>
