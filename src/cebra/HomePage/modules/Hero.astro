---
import { BrandText, Accent, LinkButton } from '../components'
---

<section class='relative w-full bg-center bg-no-repeat bg-cover'>
  <!-- Header -->
  <header class='absolute top-0 left-0 flex justify-between w-full py-5 px-14'>
    <div>
      <span class='text-4xl font-bold text-white'>LOGO</span>
    </div>
    <nav class='px-4 py-3'>
      <ul class='flex gap-8 text-base font-bold text-white uppercase'>
        <li><a href='#'>inicio</a></li>
        <li><a href='#'>quiénes somos</a></li>
        <li><a href='#'>soluciones</a></li>
        <li><a href='#'>recursos</a></li>
        <li><a href='#'>blog</a></li>
        <li><a href='#'>contacto</a></li>
      </ul>
    </nav>
  </header>

  <!-- Hero -->
  <div
    class='grid max-w-screen-xl grid-cols-1 gap-4 px-10 mx-auto md:grid-cols-3 py-60'>
    <div class='md:col-span-2'>
      <BrandText
        variant={'spaced'}
        color={'white'}
        >SOCIAL MEDIA | PAID MEDIA | SEO | DESARROLLO WEB | MARKETING DE
        CONTENIDOS | HUBSPOT CRM</BrandText
      >

      <BrandText
        variant={'banner'}
        color={'white'}
        >MÁS QUE UNA <Accent variant={'solid'} color={'yellow'}>AGENCIA DE MARKETING DIGITAL</Accent>, SOMOS TU<Accent variant={'underline'} color={'sky'}> SOCIO ESTRATÉGICO</Accent>
      </BrandText>

      <LinkButton
        variant={'yellow'}
        class='mt-10'
        >CONÓCENOS</LinkButton
      >
    </div>
  </div>
</section>

<style>
  section {
    background-image: url('/assets/cebra/Home_Hero.png');
  }
</style>
